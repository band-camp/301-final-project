
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/head') %>
</head>
<body>
    <header>
        <%- include('../../partials/header') %>
    </header>

    <main>
          <% searchResults.forEach(band =>{ %>
            <ul id="bands">
              <li><button id= "<%= band.bandname %>" class="band-item"><a href="/bands/<%= band.bandname %>"><%= band.bandname %></a></button></li>
              <li class="description"><%= band.description %></li>
              <iframe width="560" height="315" src="<%= band.video %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </ul>

          <% }) %> 
          
    </main>

    <footer>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script> 
          $('.band-item').on('click', function() {
            console.log(this.id);
          });
        </script>
    </footer>
    
</body>
</html>