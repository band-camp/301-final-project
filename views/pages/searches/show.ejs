
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/head') %>
</head>
<body>
    <header>
        <%- include('../../partials/header') %>
    </header>

    <main>
          <% searchResults.forEach(band =>{ %>
            <div id="bands-results">
              <h3><%= band.bandname %></h3>
              <p id="description"><%= band.description %></p>
              <iframe width="560" height="315" src="<%= band.video %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

              <button id="events-button" class="<%= band.bandname %>">See Upcoming Events</button>

              <ul class="events-list" id="<%= band.bandname.replace(/\s?\+?\!?\&?\'?/g, '') %>">

              </ul>
            </div>

          <% }) %> 
          
    </main>

    <footer>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="app.js"></script>
        <%- include('../../partials/footer') %>
    </footer>
    
</body>
</html>